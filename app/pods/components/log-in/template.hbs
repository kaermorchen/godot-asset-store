<h2 class="text-center">Log in</h2>

{{form-group label="Username" model=this property="username"}}
{{form-group label="Password" model=this property="password" type="password"}}

<div class="row">
  <div class="col-6">
    <button class="btn btn-primary" onclick={{perform login}}>Log In</button>
  </div>
  <div class="col-6 text-right">
    {{link-to "Sign Up" "registration" class="btn btn-link"}}
  </div>
</div>

